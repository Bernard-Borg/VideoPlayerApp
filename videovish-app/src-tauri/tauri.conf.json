{
    "build": {
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "yarn build",
        "frontendDist": "../dist",
        "devUrl": "http://localhost:49155"
    },
    "bundle": {
        "active": true,
        "externalBin": ["binaries/yt-dlp", "binaries/ffmpeg"],
        "targets": "all",
        "windows": {
            "webviewInstallMode": {
                "type": "embedBootstrapper"
            }
        },
        "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
    },
    "productName": "VideoVish",
    "mainBinaryName": "VideoVish",
    "version": "2.1.4",
    "identifier": "borg.videovish",
    "plugins": {
        "cli": {
            "args": [
                {
                    "name": "videoPath",
                    "index": 1,
                    "takesValue": true
                }
            ]
        }
    },
    "app": {
        "withGlobalTauri": false,
        "security": {
            "assetProtocol": {
                "scope": ["**"],
                "enable": true
            },
            "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost https://videovish.vercel.app 'self'; script-src 'self'; img-src https://i.ytimg.com 'self'; media-src 'self' asset: https://asset.localhost; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com"
        },
        "windows": [
            {
                "label": "main",
                "center": true,
                "fullscreen": false,
                "resizable": true,
                "title": "VideOVish",
                "width": 1920,
                "height": 1080,
                "minHeight": 480,
                "minWidth": 480,
                "decorations": false,
                "titleBarStyle": "Overlay",
                "useHttpsScheme": true
            }
        ]
    }
}
